{
  "name": "barbearia-saas",
  "version": "1.0.0",
  "description": "Plataforma SaaS para barbearias com agendamento online",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:robust": "concurrently \"npm run server:robust\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "server:robust": "cd backend && npm run dev:robust",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": ["barbearia", "saas", "agendamento", "multitenant"],
  "author": "Barbearia SaaS",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 