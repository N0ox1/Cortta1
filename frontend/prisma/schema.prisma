generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  password            String
  name                String
  phone               String?
  country             String?
  role                UserRole      @default(BARBERSHOP_ADMIN)
  isActive            Boolean       @default(true)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  barbershopId        String?
  appointments        Appointment[] @relation("BarberAppointments")
  createdAppointments Appointment[] @relation("CreatedAppointments")
  barbershops         Barbershop?   @relation(fields: [barbershopId], references: [id], onDelete: Cascade)

  @@map("users")
}

model Service {
  id                  String               @id @default(cuid())
  name                String
  description         String?
  price               Decimal              @db.Decimal(10, 2)
  duration            Int
  category            ServiceCategory
  isActive            Boolean              @default(true)
  barbershopId        String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  appointmentServices AppointmentService[]
  barbershop          Barbershop           @relation(fields: [barbershopId], references: [id], onDelete: Cascade)

  @@unique([barbershopId, name])
  @@map("services")
}

model Client {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  birthDate    DateTime?
  address      String?
  barbershopId String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
  barbershops  Barbershop    @relation(fields: [barbershopId], references: [id], onDelete: Cascade)

  @@unique([barbershopId, email])
  @@map("clients")
}

model Appointment {
  id           String               @id @default(cuid())
  date         DateTime
  status       AppointmentStatus    @default(SCHEDULED)
  notes        String?
  barbershopId String
  clientId     String
  barberId     String?
  createdById  String
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  services     AppointmentService[]
  barber       User?                @relation("BarberAppointments", fields: [barberId], references: [id])
  barbershops  Barbershop           @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  client       Client               @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdBy    User                 @relation("CreatedAppointments", fields: [createdById], references: [id])

  @@map("appointments")
}

model AppointmentService {
  id            String      @id @default(cuid())
  appointmentId String
  serviceId     String
  price         Decimal     @db.Decimal(10, 2)
  createdAt     DateTime    @default(now())
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service       Service     @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([appointmentId, serviceId])
  @@map("appointment_services")
}

model Payment {
  id           String        @id @default(cuid())
  amount       Decimal       @db.Decimal(10, 2)
  status       PaymentStatus @default(PENDING)
  method       PaymentMethod
  dueDate      DateTime
  paidAt       DateTime?
  description  String?
  barbershopId String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  barbershops  Barbershop    @relation(fields: [barbershopId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model SystemConfig {
  id        String     @id @default(cuid())
  key       String     @unique
  value     String
  type      ConfigType @default(STRING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("system_configs")
}

model JoinRequest {
  id            String            @id @default(cuid())
  status        JoinRequestStatus @default(PENDING)
  message       String?
  userEmail     String
  userFirstName String
  userLastName  String
  userPhone     String?
  userCountry   String?
  barbershopId  String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  userPassword  String?
  barbershops   Barbershop        @relation(fields: [barbershopId], references: [id], onDelete: Cascade)

  @@map("join_requests")
}

model Barbershop {
  id                    String             @id @default(cuid())
  name                  String
  slug                  String             @unique
  email                 String             @unique
  phone                 String?
  address               String?
  city                  String?
  state                 String?
  zipCode               String?
  description           String?
  logo                  String?
  logoImage             String?
  bannerImage           String?
  instagram             String?
  whatsapp              String?
  primaryColor          String?            @default("#2563eb")
  secondaryColor        String?            @default("#1e40af")
  accentColor           String?            @default("#fbbf24")
  workingHours          Json?
  isBlocked             Boolean            @default(false)
  subscriptionPlan      SubscriptionPlan   @default(BASIC)
  subscriptionStatus    SubscriptionStatus @default(ACTIVE)
  subscriptionStartDate DateTime?
  subscriptionEndDate   DateTime?
  monthlyFee            Decimal            @default(29.90) @db.Decimal(10, 2)
  totalRevenue          Decimal            @default(0) @db.Decimal(10, 2)
  monthlyRevenue        Decimal            @default(0) @db.Decimal(10, 2)
  createdAt             DateTime           @default(now())
  updatedAt             DateTime
  website               String?
  categories            Json?
  teamSize              String?
  complement            String?
  number                String?
  onlineOnly            Boolean            @default(false)
  tenantId              String             @map("tenant_id")
  isActive              Boolean            @map("is_active")
  appointments          Appointment[]
  clients               Client[]
  join_requests         JoinRequest[]
  payments              Payment[]
  services              Service[]
  users                 User[]

  @@unique([tenantId, slug], map: "barbershops_tenant_slug_key")
  @@index([tenantId], map: "barbershops_tenant_idx")
  @@map("barbershops")
}

model rate_limits {
  key      String   @id
  tokens   Int
  reset_at DateTime @db.Timestamptz(6)
}

enum UserRole {
  SUPER_ADMIN
  BARBERSHOP_ADMIN
  BARBER
  PROFESSIONAL
}

enum SubscriptionPlan {
  BASIC
  PREMIUM
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
  CANCELLED
}

enum ServiceCategory {
  CORTE
  BARBA
  COMBO
  OUTROS
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  PIX
  BANK_TRANSFER
  CASH
}

enum ConfigType {
  STRING
  NUMBER
  BOOLEAN
  JSON
}

enum JoinRequestStatus {
  PENDING
  APPROVED
  REJECTED
}
