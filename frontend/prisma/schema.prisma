generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  password            String
  name                String
  phone               String?
  country             String?
  role                UserRole      @default(BARBERSHOP_ADMIN)
  isActive            Boolean       @default(true)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  tenantId            String?
  appointments        Appointment[] @relation("BarberAppointments")
  createdAppointments Appointment[] @relation("CreatedAppointments")
  barbershop          Barbershop?   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([tenantId])
  @@index([tenantId, role])
  @@map("users")
}

model Service {
  id                  String               @id @default(cuid())
  name                String
  description         String?
  price               Decimal              @db.Decimal(10, 2)
  duration            Int
  category            ServiceCategory
  isActive            Boolean              @default(true)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  tenantId            String
  appointmentServices AppointmentService[]
  barbershop          Barbershop              @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([tenantId, isActive])
  @@map("services")
}

model Client {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  birthDate    DateTime?
  address      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  tenantId     String
  appointments Appointment[]
  barbershop   Barbershop    @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email])
  @@index([tenantId])
  @@map("clients")
}

model Appointment {
  id          String               @id @default(cuid())
  date        DateTime
  status      AppointmentStatus    @default(SCHEDULED)
  notes       String?
  clientId    String
  barberId    String?
  createdById String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  tenantId    String
  services    AppointmentService[]
  barber      User?                @relation("BarberAppointments", fields: [barberId], references: [id])
  client      Client               @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdBy   User                 @relation("CreatedAppointments", fields: [createdById], references: [id])
  barbershop  Barbershop          @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([barberId])
  @@index([clientId])
  @@index([tenantId, date])
  @@index([tenantId, date, status])
  @@index([tenantId])
  @@index([tenantId, status])
  @@map("appointments")
}

model AppointmentService {
  id            String      @id @default(cuid())
  appointmentId String
  serviceId     String
  price         Decimal     @db.Decimal(10, 2)
  createdAt     DateTime    @default(now())
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service       Service     @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([appointmentId, serviceId])
  @@index([appointmentId])
  @@index([serviceId])
  @@map("appointment_services")
}

model Payment {
  id          String        @id @default(cuid())
  amount      Decimal       @db.Decimal(10, 2)
  status      PaymentStatus @default(PENDING)
  method      PaymentMethod
  dueDate     DateTime
  paidAt      DateTime?
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  tenantId    String
  barbershop  Barbershop   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([tenantId])
  @@map("payments")
}

model SystemConfig {
  id        String     @id @default(cuid())
  key       String     @unique
  value     String
  type      ConfigType @default(STRING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("system_configs")
}

model JoinRequest {
  id            String            @id @default(cuid())
  status        JoinRequestStatus @default(PENDING)
  message       String?
  userEmail     String
  userFirstName String
  userLastName  String
  userPhone     String?
  userCountry   String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  userPassword  String?
  tenantId      String
  barbershop    Barbershop       @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([tenantId])
  @@index([tenantId, status])
  @@map("join_requests")
}

model audit_logs {
  id        String   @id
  action    String
  entity    String
  entityId  String?
  userId    String?
  tenantId  String?
  oldValues Json?
  newValues Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([action])
  @@index([createdAt])
  @@index([tenantId])
  @@index([userId])
}

model cache_entries {
  id        String   @id
  key       String   @unique
  value     String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Barbershop {
  id        String  @id @default(cuid())
  tenantId  String
  slug      String
  name      String?          // <- adiciona opcional AGORA
  isActive  Boolean @default(true)

  // Relações inversas
  users                 User[]
  services              Service[]
  clients               Client[]
  appointments          Appointment[]
  payments              Payment[]
  join_requests         JoinRequest[]

  @@unique([tenantId, slug])
  @@index([tenantId])
}

enum UserRole {
  SUPER_ADMIN
  BARBERSHOP_ADMIN
  BARBER
  PROFESSIONAL
}

enum SubscriptionPlan {
  BASIC
  PREMIUM
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
  CANCELLED
}

enum ServiceCategory {
  CORTE
  BARBA
  COMBO
  OUTROS
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  PIX
  BANK_TRANSFER
  CASH
}

enum ConfigType {
  STRING
  NUMBER
  BOOLEAN
  JSON
}

enum JoinRequestStatus {
  PENDING
  APPROVED
  REJECTED
}
