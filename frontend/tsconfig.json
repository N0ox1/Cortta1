{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "src/**/*", "next.config.*", "postcss.config.*"]
}
